{
  "name": "@zyf2e/capui-mini-program",
  "version": "1.0.3",
  "miniprogram": "lib",
  "description": "轻量、可靠的小程序 UI 组件库",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "node build/dev.js",
    "lint": "eslint ./packages --ext .js,.ts --fix && stylelint \"packages/**/*.less\" --fix",
    "release": "sh build/release.sh",
    "release:site": "sh build/release-site.sh",
    ":release": "release-it",
    "build:lib": "yarn && npx gulp -f build/compiler.js --series buildEs buildLib",
    "build:changelog": "vant changelog --tag v1.3.0 ./docs/markdown/changelog.generated.md",
    "upload:weapp": "node build/upload.js"
  },
  "files": [
    "dist",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.91jkys.com:f2e/capui-mini-program.git"
  },
  "release-it": {
    "git": {
      "commitArgs": [
        "--no-verify"
      ]
    },
    "npm": {
      "publish": false
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "homepage": "https://gitlab.91jkys.com/f2e/capui-mini-program/blob/master/README.md",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.5.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@vant/cli": "^1.0.3",
    "@vant/doc": "^2.5.5",
    "@vant/eslint-config": "^2.2.2",
    "@vant/icons": "1.3.2",
    "@vant/markdown-loader": "^2.3.0",
    "@vant/stylelint-config": "^1.3.0",
    "autoprefixer": "^10.0.0",
    "babel-loader": "^8.0.0",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.0",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^6.1.0",
    "gh-pages": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-insert": "^0.5.0",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "html-webpack-plugin": "^4.0.0",
    "less": "^3.9.0",
    "less-loader": "^7.0.0",
    "lint-staged": "^10.0.0",
    "miniprogram-api-typings": "^3.1.6",
    "miniprogram-ci": "^1.0.27",
    "postcss": "^8.1.1",
    "postcss-loader": "^4.0.0",
    "prettier": "^2.0.5",
    "progress-bar-webpack-plugin": "^2.0.0",
    "release-it": "^14.2.2",
    "style-loader": "^2.0.0",
    "stylelint": "^13.0.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.0.0",
    "vue": "2.6.10",
    "vue-loader": "^15.7.1",
    "vue-router": "^3.1.1",
    "vue-template-compiler": "2.6.10",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-serve": "^2.0.3"
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "never"
  },
  "browserslist": [
    "Chrome >= 53",
    "ChromeAndroid >= 53",
    "iOS >= 8"
  ],
  "dependencies": {}
}
