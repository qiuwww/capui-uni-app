<demo-block title="icon按钮+文字按钮" padding>
  <van-button type="primary" bind:click="toggleActionSheet1">弹出菜单</van-button>
  <van-modal-sheet
    title="这里是标题"
    show="{{ show1 }}"
    bind:close="toggleActionSheet1"
  >
    <van-icon slot="headLeft" name="cross" bind:click="toggleActionSheet1"/>
    <view slot="headRight" bind:tap="showSummary">使用说明</view>
    <view>我是内容，不爽自己改</view>
  </van-modal-sheet>
</demo-block>

