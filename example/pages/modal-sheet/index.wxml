    show="{{ show2 }}"
    bind:close="toggleActionSheet2"
  >
    <view slot="headLeft" bind:tap="toggleActionSheet2">取消</view>
    <view slot="headRight" class="confirm" bind:tap="confirmMsg">确认</view>
    <view>我是一段文案,Hello World</view>
  </van-modal-sheet>
</demo-block>


