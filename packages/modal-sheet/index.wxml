<van-popup
  show="{{ show }}"
  position="bottom"
  round="{{ round }}"
  z-index="{{ zIndex }}"
  overlay="{{ overlay }}"
  custom-class="van-action-sheet"
  safe-area-inset-bottom="{{ safeAreaInsetBottom }}"
  close-on-click-overlay="{{ closeOnClickOverlay }}"
  bind:close="onClickOverlay"
>
  <view wx:if="{{ title }}" class="van-modal-sheet__header">
    <slot name="titleLeft">
      <van-icon
        name="cross"
        custom-class="van-modal-sheet__close"
        bind:click="onClose"
      />
    </slot>
    {{ title }}
    <slot name="titleRight">
      使用说明
    </slot>
  </view>
  <slot />
</van-popup>
