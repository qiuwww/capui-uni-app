<van-popup
  show="{{ show }}"
  position="bottom"
  round="{{ round }}"
  z-index="{{ zIndex }}"
  overlay="{{ overlay }}"
  custom-class="{{ customClass }}"
  safe-area-inset-bottom="{{ safeAreaInsetBottom }}"
  close-on-click-overlay="{{ closeOnClickOverlay }}"
  bind:close="onClickOverlay"
>
  <view class="van-modal-sheet__header">
    <view class="van-modal-sheet__header--left">
      <slot name="headLeft"/>
    </view>
    <view class="van-modal-sheet__header--title">
      {{ title }}
    </view>
    <view class="van-modal-sheet__header--right">
      <slot name="headRight"/>
    </view>
  </view>
  <scroll-view scroll-y class="van-modal-sheet__container {{type}}">
    <slot />
  </scroll-view>
</van-popup>
